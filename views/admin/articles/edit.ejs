<%- include('../components/head-article.ejs'); %>
<header class="fixed-top">
  <%- include('../components/header-admin.ejs'); %> 
</header>
<main class="h-100 d-flex justify-content-center align-items-center">
  <div class="overflow container h-75 col-md-8 col-sm-12">
    <div class="card">
      <div class="card-header">
        <h1>Edição de Artigo</h1>
      </div>
      <div class="card-body">
        <form action="/admin/artigos/atualizar" method="post">
          <div class="form-group">
            <label for="articleUpdatedTitle">Atualizar o título do artigo: </label>
            <input type="hidden" name="articleId" value="<%= article.id %>">
            <input type="text"
            class="form-control" name="articleUpdatedTitle" id="articleUpdatedTitle" aria-describedby="helpId" placeholder="Novo titulo">
            <small id="helpId" class="form-text text-muted">Nome atual: <strong><%= article.title %></strong></small>
          </div>
          <div class="form-group">
            <label for="articleUpdatedBody">Insira o conteúdo</label>
            <textarea name="articleUpdatedBody" id="articleBodyRegister" class="form-control" placeholder="Escreva a sua ideia"></textarea>
          </div>
          <div class="form-group">
            <label for="articleCategoryRegister">Selecione uma categoria</label>
            <select class="form-control" name="articleCategoryRegister" id="articleCategoryRegister">
              <% categories.forEach(category => { %>
                <option value="<%= category.id %>"><%= category.title %></option>
              <% }); %>
            </select>
          </div>
          <button type="submit" class="btn btn-success">Atualizar artigo</button>
        </form>
      </div>
    </div>
  </div>
</main>
<footer class="fixed-bottom">
  <%- include('../../components/footer.ejs'); %> 
</footer>
<%- include('../../components/tail.ejs'); %>