<%- include('../../components/head.ejs'); %>
  <header class="fixed-top">
    <%- include('../components/header-admin.ejs') %> 
  </header>
  <main class="cathegories h-100 d-flex justify-content-center align-items-center">
    <div class="cathegories-listing container h-75 col-md-8  col-sm-12">
      <h1>Categorias</h1>
      <a name="btnRegiterNewCathegory" id="btnRegiterNewCathegory" class="btn btn-success" href="/admin/categorias/novo" role="button">Criar nova categoria</a>
      <table class="table table-bordered mt-2">
        <thead class="thead-inverse">
          <tr>
            <th class="d-none d-md-block">ID</th>
            <th>Titulo</th>
            <th>Slug</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% cathegories.forEach(cathegory => { %>
          <tr>
            <td scope="row" class="d-none d-md-block"><%= cathegory.id %></td>
            <td><%= cathegory.title %></td>
            <td><%= cathegory.slug %></td>
            <td class="d-flex justify-content-around align-items-start">
              <button type="button" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
              <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmationDeleteCathegory">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
              </button>
              <!-- Modal -->
              <div class="modal fade" id="confirmationDeleteCathegory" tabindex="-1" role="dialog" aria-labelledby="confirmationDeleteCathegory" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="confirmationDeleteCathegory">Confirmação</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      Deseja realmente deletar a categoria <strong><%= cathegory.title %></strong>
                      <br>
                      <small class="text-muted">Tal ação não pode ser revertida</small>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                      <form class="form-inline" action="/admin/categorias/deletar" method="post">
                        <div class="form-group">
                          <input type="hidden" name="cathegoryId" value="<%= cathegory.id %>">
                          <button type="submit" class="btn btn-danger">Deletar</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </main>
  <footer class="fixed-bottom">
    <%- include('../../components/footer.ejs') %> 
  </footer>
<%- include('../../components/tail.ejs'); %>